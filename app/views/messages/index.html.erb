<p id="notice"><%= notice %></p>

<section class="w-auto mt-8 mb-8">
        <h1 class="text-gray-700 md:text-5xl font-bold">Mensagens</h1>
</section>

<div class="w-full">
  <table class="w-full table">
    <thead class="bg-gray-700 text-white text-center font-bold">
      <tr>
        <th class="py-2 px-4">Name</th>
        <th class="py-2 px-4">Email</th>
        <th class="py-2 px-4">Message type</th>
        <th class="py-2 px-4">Message</th>
        <th colspan="3" class="py-2 px-4"></th>
      </tr>
    </thead>

    <tbody class="text-center">
      <% @messages.each do |message| %>
        <tr>
          <td class="py-2 px-4"><%= message.name %></td>
          <td class="py-2 px-4"><%= message.email %></td>
          <td class="py-2 px-4"><%= message.message_type %></td>
          <td class="py-2 px-4"><%= message.message %></td>
          <td class="py-2 px-4"><%= link_to 'Show', message %></td>
          <td class="py-2 px-4"><%= link_to 'Edit', edit_message_path(message) %></td>
          <td class="py-2 px-4"><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Message', new_message_path, class: "ml-auto w-60 block py-2 px-4 bg-gray-700 text-bold text-base text-white text-center rounded"%>
